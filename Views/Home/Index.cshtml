@using Microsoft.AspNetCore.Authentication

@if (User.Identity!.IsAuthenticated)
{
  var authenticationResult = await Context.AuthenticateAsync();
  var issued = authenticationResult.Properties?.Items[".issued"];
  var expires = authenticationResult.Properties?.Items[".expires"];
  <div class="container">
    <p>You are signed in as</p>
    <h2>@User.Identity.Name</h2>
    <hr>
    <dl>
      <dt>Issued</dt>
      <dd>@issued</dd>
      <dt>Expires</dt>
      <dd>@expires</dd>
    </dl>
    <hr>
    <p><a class="btn btn-primary" asp-controller="Account" asp-action="Logout">Sign Out</a></p>
  </div>
}

@if (!User.Identity.IsAuthenticated)
{
  <div class="container">
    <p>You are not signed in</p>
    <p><a class="btn btn-primary" asp-controller="Account" asp-action="Login">Sign In</a></p>
  </div>
}